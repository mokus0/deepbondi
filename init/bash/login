#  Originally based on MIT Project Athena's TCSH scripts, circa 1990.
#  These have long since taken on a life of their own.
#  
#  Login runs before RC, and only once (on the "login" shell)
#  RC is run for every interactive shell that starts.
#

#
# Set $PATH.  Starts with /deepbondi/bin, and glues bits on.
#   If this is CYGWIN, preserves existing $PATH too, since
#   there's so much crap there
#

if [ X`uname | grep -qe ^CYGWIN; echo $?` == X0 ]; then
	PATH='/deepbondi/bin':"$PATH"
else
	PATH='/deepbondi/bin'
fi

# prepend these...
for path in ~/bin ; do
        if [ -d "$path" ]; then
                PATH="$path":"$PATH"
        fi
done

# append these...
for path in /deepbondi/sbin /Developer/Tools \
	{/usr/local/,/,/usr/}{,X11*/,mysql/}{bin,sbin,texbin}; do
        if [ -d "$path" ]; then
                PATH="$PATH":"$path"
        fi
done

export PATH

#
#  Similar treatment for MANPATH
#
MANPATH="/usr/man"

# prepend these...
for manpath in ~/man ; do
        if [ -d "$manpath" ]; then
                PATH="$manpath":"$MANPATH"
        fi
done

# append these...
for manpath in {/usr/,/usr/X11/,/usr/local/}{,X11*/,mysql/,share/}man ; do
        if [ -d "$manpath" ]; then
                MANPATH="$MANPATH":"$manpath"
        fi
done

export MANPATH

#
# Setup Fink, if installed
#

if [ -r "/sw/bin/init.sh" ]; then
	source /sw/bin/init.sh
fi


#
# Read user's custom path script
#   (this could go in 'login', but 'path' is easier to remember)
#
if [ -r "${user_bash_initdir}/path" ]; then
	source "${user_bash_initdir}/path"
fi

#
# Read user's login script
#
if [ -r "${user_bash_initdir}/login" ]; then
	source "${user_bash_initdir}/login"
fi


