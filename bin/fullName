#!/usr/bin/perl
#
#  <fullName>
#    Copyright 2007 James Cook - All Rights Reserved.
#
#

use strict;

my $name = `whoami`;
chomp $name;

my @names = @ARGV;

unless (@names) {
	@names = ($name);
}

for my $name (@names) {
	my ($name,$passwd,$uid,$gid,
		$quota,$comment,$gcos,$dir,$shell,$expire) = getpwnam $name;
	
	if (defined $gcos and $gcos ne "") {
		print "$gcos\n";
	} else {
		print "$name\n";
	}
}