#!/usr/bin/perl
#
#	<hgrep>
#		(very) Simple grep-like tool that hilights regex matches.
#

use strict;

use lib (($ENV{deepbondi} || "/deepbondi") . "/pm");
require "hilite.pm";

my $re = shift @ARGV;

if (not defined $re) {
	print "Enter regex:Â  ";
	$re = <>;
}
chomp $re;

my $col = shift @ARGV;
my $gr;
my $bl = hilite::color();

if (defined $col) {
	$gr = hilite::color($col, undef, "bold");
} else {
	$gr = hilite::color("green", undef, "bold");
}

$gr = $gr . hilite::color(undef, undef, "underline");

while (<>) {
 	s/${re}/${gr}$&${bl}/g;
	print;
}

