#!/usr/bin/perl
#
#  <fork>
#    Copyright 2008 Cook, J. MR  SSD, Inc. - All Rights Reserved.
#
#

use strict;

use Getopt::Std;

my %opts;
getopts ("q", \%opts);

if ($opts{"q"}) {
    open STDIN, "<", "/dev/null";
    open STDOUT, ">", "/dev/null";
    open STDERR, ">", "/dev/null";
}

if (my $child = fork()) {
    # we are parent
    exit 0;
}

system @ARGV;